<div>
  <% if @error %>
    <h2>Cannot add link - Missing information</h2>
  <% end %>
</div>

<div>
  <h2>Add a new link</h2>
  <form action="/save_new_link">
    <h3>Name</h3>
    <input type="text" name="links[name]" placeholder="Media Name">
    <h3>Associated Assignment</h3>
    <select name="links[assignment_id]">
      <% Assignment.all.each do |assignment| %>
        <option value="<%= assignment.id %>"><%= assignment.name %></option>
      <% end %>
    </select>
    <h3>Description</h3>
    <input type="text" name="links[description]" placeholder="Media Description">
    <h3>Link to Media</h3>
    <input type="text" name="links[where_stored]" placeholder="Link to Media"><br>
    <input type="submit">
  </form>
</div>
