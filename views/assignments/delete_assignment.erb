<div>
  <h2>Select an assignment to delete</h2>
  <% Assignment.all.each do |assignment| %>
  <ul>
    <li>
      <a href="/delete/<%= assignment.id %>">
        <%= assignment.name %></a> - <%= assignment.description %>: <%= assignment.where_stored %>
    </li>
  </ul>
  <% end %>
</div>
