<div>
  <nav>
    <p>
      <a href="/all_assignments">View All Assignments</a>
    </p>
  </nav>
</div>

<div>
  <h2><%= @selected_assignment.name %></h2>
  <ul>
    <li>
      Description: <%= @selected_assignment.description %>
    </li>
    <li>
      Link to Assignment: <%= @selected_assignment.where_stored %>
    </li>
  </ul>

  <h3>Associated Media</h3>
  <% @selected_assignment.get_links.each do |link| %>
  <ul>
    <li>
      <a href="<%= link.where_stored %>">
      <%= link.name %>
    </a>
    </li>
  </ul>
  <% end %>

  <h3>Collaborators:</h3>
  <% @selected_assignment.get_user_names.each do |users| %>
  <ul>
    <li>
      <%= users["name"] %>
    </li>
  </ul>
  <% end %>

  <a href="/add_collaborator">Add a collaborator for this assignment</a><br>
  <a href="/add_link">Add a link to media associated with this assignment</a>
</div>
